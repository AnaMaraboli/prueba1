    <script>
        function evaluarControles() {
            // Obtenemos las respuestas
            const respuestas = [
                document.getElementById('entorno-sub1').value,
                document.getElementById('entorno-sub2').value,
                document.getElementById('entorno-sub3').value,
                document.getElementById('riesgo-sub1').value,
                document.getElementById('riesgo-sub2').value,
                document.getElementById('riesgo-sub3').value,
                document.getElementById('control-sub1').value,
                document.getElementById('control-sub2').value,
                document.getElementById('control-sub3').value,
                document.getElementById('info-sub1').value,
                document.getElementById('info-sub2').value,
                document.getElementById('monitoreo-sub1').value,
                document.getElementById('monitoreo-sub2').value
            ];

            let controlFaltante = [];
            let todasRespuestasSi = true;

            respuestas.forEach((respuesta, index) => {
                if (respuesta !== 'si') {
                    todasRespuestasSi = false;
                    controlFaltante.push(index + 1);
                }
            });

            let resultado;
            if (todasRespuestasSi) {
                resultado = "<div class='alert alert-success'>Todos los controles están en cumplimiento.</div>";
            } else {
                resultado = "<div class='alert alert-danger'>Los siguientes controles necesitan atención: " + controlFaltante.join(", ") + "</div>";
            }

            document.getElementById('resultado-controles').innerHTML = resultado;
        }
    </script>
